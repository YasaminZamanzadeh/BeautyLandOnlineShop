
@using BeautyLand.Application.Services.Site.UserAddress
@model NewUserAddressDto


@{
    Layout = "~/Views/Shared/_LayoutCustomerPanel.cshtml";
}

<div class="checkout-section shadow-around">
    <div class="checkout-section-content">
        <form method="post" asp-action="CreateUserAddress" asp-controller="UserAddress" asp-area="Customers" data-select2-id="select2-data-18-nzre">
            <div class="row" data-select2-id="select2-data-17-414m">

                <div class="col-lg-6 mb-3">
                    <div class="text-sm text-muted mb-1"> نام گیرنده:</div>
                    <div class="text-dark font-weight-bold">
                        <div class="form-element-row mb-0">
                            <input type="text" class="input-element" asp-for="Name">
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-3">
                    <div class="text-sm text-muted mb-1">استان:</div>
                    <div class="text-dark font-weight-bold">
                        <div class="form-element-row mb-0">
                            <input type="text" class="input-element" asp-for="State">
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-3">
                    <div class="text-sm text-muted mb-1">شهر:</div>
                    <div class="text-dark font-weight-bold">
                        <div class="form-element-row mb-0">
                            <input type="text" class="input-element" asp-for="City">
                        </div>
                    </div>
                </div>


                <div class="col-lg-6 mb-3">
                    <div class="text-sm text-muted mb-1">کد پستی:</div>
                    <div class="text-dark font-weight-bold">
                        <div class="form-element-row mb-0">
                            <input type="text" class="input-element" asp-for="PostalCode">
                        </div>
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <div class="text-sm text-muted mb-1">آدرس کامل:</div>
                    <div class="text-dark font-weight-bold">
                        <div class="form-element-row mb-0">
                            <textarea  cols="30" rows="10" class="input-element" asp-for="PostalAddress"></textarea>
                        </div>
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <button type="submit" class="btn btn-primary">ثبت<i class="fad fa-money-check-edit"></i></button>
                </div>

            </div>
        </form>
    </div>
</div>
