@page
@model BeautyLand.AdministratorEndPoint.Pages.Catalogs.Types.DeleteModel
@{
}

<div class="col-lg-12 col-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4> حذف دسته بندی </h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <form asp-page="delete" method="post">
                @if (Model.Messages != null)
                {
                    @foreach (var item in Model.Messages)
                    {
                        <div class="alert alert-info">
                            <p>@item</p>
                        </div>
                    }
                }

                <h4>آیا از حذف دسته @Model.Model.Name  مطمئن هستید؟</h4>
                <input type="hidden" asp-for="Model.Name" />
                <input type="hidden" asp-for="Model.ParentId" />
                <input type="hidden" asp-for="Model.Id" />
                <input type="submit" name="time" value="بله" class="btn btn-danger">
                <a asp-page="index" class="btn btn-info">خیر</a>
            </form>
        </div>
    </div>
</div>
