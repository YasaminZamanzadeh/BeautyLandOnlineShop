@using BeautyLand.Subscription.EnumExtensions;
@using BeautyLand.Application.Services.Site.Orders.GetOrderDetail;
@model List<OrderDetailDto>
@{
    ViewData["Title"] = "جزئیات سفارش";
 Layout = "~/Views/Shared/_LayoutCustomerPanel.cshtml";
}

@foreach (var user in Model)
{
<div class="col-12">
    <section class="shadow-around p-3">
        <div class="row">
            <div class="col-12">
                <div class="checkout-section shadow-around p-2">
                    <div class="checkout-section-content">
                        <div class="cart-items">
                            <div class="mb-2">
                                <span class="text-muted">تحویل گیرنده:</span>
                                <span class="font-weight-bold">@user.Address.Name</span>
                            </div>
                            <div class="mb-2">
                                <span class="text-muted">شماره تماس :</span>
                                <span class="font-weight-bold">@user.PhoneNumber</span>
                            </div>
                            <div class="mb-2">
                                <span class="text-muted d-block">ارسال به:</span>
                                <span class="font-weight-bold">
                                    @user.Address.PostalAddress
                                </span>
                            </div>
                            <div class="mb-2">
                                <span class="text-muted">وضعیت :</span>
                                <span class="font-weight-bold text-success">
                                    @user.OrderStatus.GetDescription()
                                </span>
                            </div>
                            <div class="mb-2">
                                <span class="text-muted">مبلغ کل این مرسوله :</span>
                                <span class="font-weight-bold">
                                   @user.Price.ToString("n0")
                                    <span class="text-sm text-secondary">تومان</span>
                                </span>
                            </div>
                            <hr>
                            @foreach (var order in user.OrderItems)
                            {
                                <div class="cart-item py-4 px-3">
                                    <div class="item-thumbnail">
                                        <a href="#">
                                            <img src="@order.Image" alt="item">
                                        </a>
                                    </div>
                                    <div class="item-info flex-grow-1">
                                        <div class="item-title">
                                            <h2>
                                                <a href="#">
                                                    @order.Name
                                                </a>
                                            </h2>
                                        </div>
                                        <div class="item-detail">
                                            <ul>
                                                <li>
                                                    <span class="color" style="background-color: #9E9E9E;"></span>
                                                    <span>محصولات ارایشی و بهداشتی</span>
                                                </li>
                                                <li>
                                                    <i class="far fa-shield-check text-muted"></i>
                                                    <span>با کیفیت</span>
                                                </li>
                                                <li>
                                                    <i class="far fa-store-alt text-muted"></i>
                                                    <span>پرکاربرد</span>
                                                </li>
                                            </ul>
                                            <div class="item-quantity--item-price">
                                                <div class="item-price">
                                                    <span class="text-muted"> قیمت :</span>
                                                   @order.Price.ToString("n0")<span class="text-sm mr-1">تومان</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
}



