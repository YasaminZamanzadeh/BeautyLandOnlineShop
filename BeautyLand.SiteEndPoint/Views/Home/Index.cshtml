@using BeautyLand.Domain.Banner;
@using BeautyLand.Application.Services.Site.Home.GetHome;
@model HomeDto;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var slider = Model.Banners.Where(p => p.BannerPosition == BannerPosition.Slider).ToList();
    var theFirstRow = Model.Banners.Where(p => p.BannerPosition == BannerPosition.TheFirstRow).FirstOrDefault();
    var theSecondRow = Model.Banners.Where(p => p.BannerPosition == BannerPosition.TheSecondRow).ToList();
    var theThirdRow = Model.Banners.Where(p => p.BannerPosition == BannerPosition.TheThirdRow).ToList();
    var theFourthRow = Model.Banners.Where(p => p.BannerPosition == BannerPosition.TheFourthRow).ToList();
    var theFifthRow = Model.Banners.Where(p => p.BannerPosition == BannerPosition.TheFifthRow).ToList();

}

<div class="container">
    <div class="row d-none d-sm-block">
        <div class="col-12 mb-3">
            @if (theFirstRow != null)
            {
                <div class="banner">
                    <a href="@theFirstRow.Link">
                        <img src="@theFirstRow.Image" alt="banner">
                    </a>
                </div>
            }

        </div>
    </div>
    <div class="row mb-4">
        <div class="col-lg-8 ml-lg-0 mb-3">
            <div class="main-slider">
                <div class="swiper-container main-page-slider">
                    <div class="swiper-wrapper">
                        @foreach (var banner in slider)
                        {
                            <div class="swiper-slide" data-swiper-slide-index="@banner.Id">
                                <a href="@banner.Link">
                                    <img src="@banner.Image" alt="Banner @banner.Id">
                                </a>
                            </div>
                        }
                    </div>
                    <!-- Add Arrows -->
                    <div class="swiper-button-next" tabindex="0" role="button" aria-label="Next slide"></div>
                    <div class="swiper-button-prev" tabindex="0" role="button" aria-label="Previous slide"></div>
                    <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
                </div>
            </div>

            <div class="swiper-container main-page-slider-thumbs d-none d-sm-block">
                <div class="swiper-wrapper">
                    @foreach (var banner in slider)
                    {
                        <div class="swiper-slide" data-swiper-slide-index="@banner.Id">
                            <span>Banner Title: @banner.Id</span> <!-- Modify the content as needed -->
                        </div>
                    }
                </div>
                <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
            </div>


        </div>
        <div class="col-lg-4">
            <div class="row">
                @foreach (var item in theSecondRow.Take(2))
                {
                    <div class="col-lg-12 col-sm-6 col-12">
                        <div class="banner mb-3">
                            <a href="@item.Link">
                                <img src="@item.Image" alt="banner">
                            </a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="row align-items-center mb-4">
        <div class="col-lg-4 order-2 order-lg-1">
            <div class="row mt-4 mt-lg-0">
                @foreach (var item in theThirdRow.Take(2))
                {
                    <div class="col-lg-12 col-sm-6 col-12">
                        <div class="banner mb-4">
                            <a href="@item.Link">
                                <img src="@item.Image" alt="banner">
                            </a>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="col-lg-8 order-1 order-lg-2">
            <div class="offer-slider-wrapper">
                <div class="offer-slider-title">پیشنهاد شگفت انگیز</div>
                <div class="row">
                    <div class="col-12 mb-1">
                        <div class="swiper-container offer-slider swiper-container-fade swiper-container-initialized swiper-container-horizontal swiper-container-rtl">
                            <div class="swiper-wrapper" style="transition-duration: 300ms;">
                                @foreach (var item in Model.StupendousItems)
                                {
                                    <div class="swiper-slide" style="width: 881px; opacity: 1;">
                                        <div class="row align-items-center pb-3">
                                            <div class="col-sm-6 col-12 order-2 order-sm-1">
                                                <div class="product-title">
                                                    <a href="#">
                                                        @item.Name
                                                    </a>
                                                </div>
                                                <div class="product-price">
                                                    <del>
                                                        @item.Price.ToString("N0") تومان
                                                    </del>
                                                    @item.DiscountPercentage درصدتخفیف
                                                </div>
                                            </div>
                                            <div class="col-sm-6 col-12 order-1 order-sm-2">
                                                <div class="offer-slide-content">
                                                    <div class="product-thumbnail">
                                                        <a href="#">
                                                            <img src="@item.Image" alt="@item.Name">
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center pb-4">
                    <div class="col-lg-8 mt-2 mb-4 mb-lg-0">
                        <div class="offer-slider-thumbs-wrapper">
                            <div class="px-0 px-sm-5">
                                <div class="swiper-container offer-slider-thumbs swiper-container-initialized swiper-container-horizontal swiper-container-rtl">
                                    <div class="swiper-wrapper" style="transition-duration: 300ms; transform: translate3d(-192.4px, 0px, 0px);">
                                        @foreach (var item in Model.StupendousItems)
                                        {
                                            <div class="swiper-slide" style="width: 96.2px;">
                                                <img src="@item.Image" alt="@item.Name">
                                            </div>
                                        }
                                    </div>
                                    <!-- Add Pagination -->
                                    <div class="swiper-pagination swiper-pagination-clickable swiper-pagination-bullets">
                                        <!-- Pagination items can be dynamically generated if needed -->
                                    </div>
                                    <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
                                </div>
                            </div>
                            <!-- Add Arrows -->
                            <div class="offer-slider-button-next" tabindex="0" role="button" aria-label="Next slide" aria-disabled="false"><i class="far fa-chevron-left"></i></div>
                            <div class="offer-slider-button-prev swiper-button-disabled" tabindex="0" role="button" aria-label="Previous slide" aria-disabled="true"><i class="far fa-chevron-right"></i></div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="d-flex justify-content-center">
                            <div id="countdown--offer-slider">
                                <div class="ClassyCountdown-wrapper">
                                    <div class="ClassyCountdown-days" style="height: 40px;">
                                        <div style="display: inline; height: 40px; width: 40px;">
                                            <canvas width="40" height="40"></canvas>
                                            <input type="text" style="display: none; width: 0px; visibility: hidden;" readonly="readonly">
                                        </div>
                                        <span class="ClassyCountdown-value" style="font-family: 'Open Sans'; font-weight: 300; color: rgb(52, 73, 94); margin-top: -10px; font-size: 12px;">
                                            <div>7</div><span></span>
                                        </span>
                                    </div>
                                    <div class="ClassyCountdown-hours" style="height: 40px;">
                                        <div style="display: inline; height: 40px; width: 40px;">
                                            <canvas width="40" height="40"></canvas>
                                            <input type="text" style="display: none; width: 0px; visibility: hidden;" readonly="readonly">
                                        </div>
                                        <span class="ClassyCountdown-value" style="font-family: 'Open Sans'; font-weight: 300; color: rgb(52, 73, 94); margin-top: -10px; font-size: 12px;">
                                            <div>11</div><span></span>
                                        </span>
                                    </div>
                                    <div class="ClassyCountdown-minutes" style="height: 40px;">
                                        <div style="display: inline; height: 40px; width: 40px;">
                                            <canvas width="40" height="40"></canvas>
                                            <input type="text" style="display: none; width: 0px; visibility: hidden;" readonly="readonly">
                                        </div>
                                        <span class="ClassyCountdown-value" style="font-family: 'Open Sans'; font-weight: 300; color: rgb(52, 73, 94); margin-top: -10px; font-size: 12px;">
                                            <div>6</div><span></span>
                                        </span>
                                    </div>
                                    <div class="ClassyCountdown-seconds" style="height: 40px;">
                                        <div style="display: inline; height: 40px; width: 40px;">
                                            <canvas width="40" height="40"></canvas>
                                            <input type="text" style="display: none; width: 0px; visibility: hidden;" readonly="readonly">
                                        </div>
                                        <span class="ClassyCountdown-value" style="font-family: 'Open Sans'; font-weight: 300; color: rgb(52, 73, 94); margin-top: -10px; font-size: 12px;">
                                            <div>48</div><span></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="product-carousel">
        <div class="section-title">
            <i class="fad fa-pen-nib"></i>
            پرفروشترین محصولات
        </div>
        <div class="swiper-container slider-lg swiper-container-initialized swiper-container-horizontal swiper-container-rtl">
            <div class="swiper-wrapper" style="transform: translate3d(0px, 0px, 0px); transition-duration: 0ms;">

                @foreach (var item in Model.BestSellers)
                {
                    <div class="swiper-slide" style="width: 214.333px; margin-left: 10px;">
                        <div class="product-card">
                            <div class="product-card-top">
                                <a href="" class="product-image">
                                    <img src="@item.Image" alt="product image">
                                </a>
                                <div class="product-card-actions">
                                    <a class="add-to-wishlist"
                                       asp-area="Customers" asp-controller="MyFavourite" asp-action="AddToMyFavourite" asp-route-CatalogItemId="@item.Id">
                                        <i class="fas fa-heart"></i>
                                    </a>                                    <button class="add-to-compare"><i class="fas fa-random"></i></button>
                                </div>
                            </div>
                            <div class="product-card-middle">
                                <div class="ratings-container">
                                    <div class="ratings">
                                        @{ int rate = item.Rate * 20; }
                                        <div class="ratings-val" style="width: @rate%;"></div>
                                    </div>
                                </div>
                                <h6 class="product-name">
                                    <a href="#">
                                        @item.Name
                                    </a>
                                </h6>

                                @if (item.AvailableStock > 0)
                                {
                                    <div class="product-price product-price-clone">@item.Price.ToString("n0") تومان</div>
                                }
                                else
                                {
                                    <div class="product-price product-price-clone">
                                        <b class="text-danger">ناموجود </b>
                                    </div>
                                }

                            </div>
                            <div class="product-card-bottom">
                                @if (item.AvailableStock > 0)
                                {
                                    <div class="product-price">
                                        @item.Price.ToString("n0")  تومان
                                    </div>
                                }
                                else
                                {
                                    <div class="product-price">
                                        <b class="text-danger">ناموجود </b>
                                    </div>
                                }
                                <a asp-action="Detail" asp-controller="Item" asp-route-id="@item.Id" class="btn-add-to-cart">
                                    <i class="fad fa-cart-plus"></i>
                                    نمایش جزئیات
                                </a>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
        <!-- Add Arrows -->
        <div class="swiper-button-next" tabindex="0" role="button" aria-label="Next slide" aria-disabled="false"></div>
        <div class="swiper-button-prev swiper-button-disabled" tabindex="0" role="button" aria-label="Previous slide" aria-disabled="true"></div>
        <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>

    </section>
    <div class="row mb-5">

        @foreach (var item in theFourthRow.Take(4))
        {
            <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
                <div class="banner">
                    <a href="@item.Link">
                        <img src="@item.Image" alt="banner">
                    </a>
                </div>
            </div>
        }


    </div>
    <div class="row mb-5">

        @foreach (var item in theFifthRow.Take(2))
        {
            <div class="col-md-6 mb-lg-0 mb-3">
                <div class="banner">
                    <a href="@item.Link">
                        <img src="@item.Image" alt="banner">
                    </a>
                </div>
            </div>
        }


    </div>

    <div class="section-title">
        <i class="fa fa-heart"></i>
        محبوب  محصولات
    </div>
    <div class="listing-items row">


        @foreach (var item in Model.MostPopulars)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 px-0">
                <div class="product-card">
                    <div class="product-card-top">
                        <a href="" class="product-image">
                            <img src="@item.Image" alt="@item.Name">
                        </a>
                        <div class="product-card-actions">
                            <a class="add-to-wishlist"
                               asp-area="Customers" asp-controller="UserFavoriteItem" asp-action="Create" asp-route-CatalogItemId="@item.Id">
                                <i class="fas fa-heart"></i>
                            </a>
                            <button class="add-to-compare"><i class="fas fa-random"></i></button>
                        </div>
                    </div>
                    <div class="product-card-middle">
                        <div class="ratings-container">
                            <div class="ratings">
                                @{ int rate = item.Rate * 20; }
                                <div class="ratings-val" style="width: @rate%;"></div>
                            </div>
                        </div>
                        <h6 class="product-name">
                            <a href="#">
                                @item.Name
                            </a>
                        </h6>
                        @if (item.AvailableStock > 0)
                        {
                            <div class="product-price product-price-clone">@item.Price.ToString("n0") تومان</div>
                        }
                        else
                        {
                            <div class="product-price product-price-clone">
                                <b class="text-danger">ناموجود </b>
                            </div>
                        }
                    </div>
                    <div class="product-card-bottom">

                        @if (item.AvailableStock > 0)
                        {
                            <div class="product-price">
                                @item.Price.ToString("n0")  تومان
                            </div>
                        }
                        else
                        {
                            <div class="product-price">
                                <b class="text-danger">ناموجود </b>
                            </div>
                        }


                        <a asp-action="Detail" asp-controller="Item" asp-route-id="@item.Id" class="btn-add-to-cart">
                            <i class="fad fa-cart-plus"></i>
                            نمایش جزئیات
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>